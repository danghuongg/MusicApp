<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@drawable/images">

            <TextView
                android:id="@+id/tv_do_you_want_to_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/b_n_mu_n_tho_t_ng_d_ng"
                android:textSize="20sp"
                android:layout_marginTop="2dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tho_t"
                android:textSize="20sp"
                android:textColor="#08CEE6"
                android:textStyle="bold"
                android:focusable="true"
                android:padding="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                app:layout_constraintRight_toLeftOf="@id/tv_cancel"
                app:layout_constraintLeft_toLeftOf="@id/tv_do_you_want_to_exit"
                app:layout_constraintTop_toBottomOf="@id/tv_do_you_want_to_exit"
                android:layout_marginTop="60dp"/>


            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/h_y"
                android:textSize="20sp"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="5dp"
                android:clickable="true"
                app:layout_constraintLeft_toRightOf="@id/tv_exit"
                app:layout_constraintRight_toRightOf="@id/tv_do_you_want_to_exit"
                app:layout_constraintTop_toBottomOf="@id/tv_do_you_want_to_exit"
                android:layout_marginTop="60dp"/>
            <ImageView
                android:id="@+id/iv_rate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:src="@drawable/ic_baseline_sentiment_satisfied_24"
                app:layout_constraintRight_toLeftOf="@id/iv_rate2"
                android:layout_marginStart="80dp"
                app:layout_constraintLeft_toLeftOf="@id/tv_do_you_want_to_exit"
                app:layout_constraintTop_toBottomOf="@id/tv_do_you_want_to_exit"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/iv_rate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_sentiment_satisfied_alt_24"
                app:layout_constraintLeft_toRightOf="@id/iv_rate1"
                app:layout_constraintRight_toLeftOf="@id/iv_rate3"
                app:layout_constraintTop_toBottomOf="@id/tv_do_you_want_to_exit"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/iv_rate3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="80dp"
                android:src="@drawable/ic_baseline_sentiment_satisfied_alt_24"
                app:layout_constraintLeft_toRightOf="@id/iv_rate2"
                app:layout_constraintRight_toRightOf="@id/tv_do_you_want_to_exit"
                app:layout_constraintTop_toBottomOf="@id/tv_do_you_want_to_exit"
                android:layout_marginTop="10dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</layout>