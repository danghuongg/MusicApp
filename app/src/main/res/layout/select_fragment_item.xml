<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_serial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_nameSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Song"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_serial"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_baseline_phone_android_24"
            app:layout_constraintLeft_toRightOf="@id/tv_serial"
            app:layout_constraintTop_toBottomOf="@id/tv_nameSong"/>
        <TextView
            android:id="@+id/tv_singername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Singer Song"
            android:layout_marginTop="7dp"
            android:layout_marginStart="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/tv_nameSong"
            app:layout_constraintLeft_toRightOf="@id/iv_icon"
            android:textColor="#979595"
            android:textSize="12sp"
            />
        <View
            android:id="@+id/tv_view1"
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:layout_marginStart="3dp"
            android:background="#979595"
            app:layout_constraintBottom_toBottomOf="@id/tv_singername"
            app:layout_constraintLeft_toRightOf="@id/tv_singername"
            app:layout_constraintTop_toTopOf="@id/tv_singername" />
        <TextView
            android:id="@+id/tv_nhaccuatui.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/nhaccuatui_com"
            android:textColor="#979595"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_singername"
            app:layout_constraintLeft_toRightOf="@id/tv_view1"
            app:layout_constraintTop_toTopOf="@id/tv_singername" />
        <ImageView
            android:id="@+id/iv_select_item"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/custom_checkbox"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"/>
        <View
            android:id="@+id/tv_view2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:background="#979595"
            app:layout_constraintLeft_toLeftOf="@id/iv_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_icon" />







    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>